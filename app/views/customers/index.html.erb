<div id="list">

<%= form_tag customers_path, method: :get  do %>
  <div class="field">
  <%= label :customer, :search %><br/>
  <%= select_tag 'field', options_for_select(YouCloth::CUSTOMER_SEARCH_FIELD, params[:field]) %> 
  <%= text_field_tag 'q', params[:q] %> 
  <%= submit_tag t('find') %>
  </div>
<% end %>

<%= link_to 'New Customer', new_customer_path %>

<h1>Listing customers</h1>
<div class="flickr_pagination">
  <%= will_paginate @customers, :container => false %>
  <div class='page_info'>(<%= page_entries_info @customers %>)</div>
</div>

<table>
  <tr> 
    <th>Email</th>
    <th>Name</th>
    <th>Mobile/<br/>
        Phone </th>
    <th>Address</th>
    <th>Address2</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.user.email unless customer.user.nil? %></td>
    <td><%= customer.name %></td>
    <td><%= customer.mobile %><br/>
        <%= customer.phone %></td>
    <td><%= customer.address %></td>
    <td><%= customer.address2 %></td>
    <td><%= link_to 'Show', customer %></td>
    <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
    <td><%= link_to 'Destroy', customer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<div class="flickr_pagination">
  <%= will_paginate @customers, :container => false %>
  <div class='page_info'>(<%= page_entries_info @customers %>)</div>
</div>

<%= link_to 'New Customer', new_customer_path %>
<br />

</div> <!-- id=list -->
